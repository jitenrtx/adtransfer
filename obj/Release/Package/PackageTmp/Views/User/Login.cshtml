@model adtransfer.System_User
@{
    ViewBag.Title = "Login";
    Layout = null;

}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=yes">
    <link rel='stylesheet prefetch' href='http://fonts.googleapis.com/css?family=Open+Sans'>
    <link rel="stylesheet" href="/Content/login.css">

    
</head>
<body>
    <div class="cont">
@using (Html.BeginForm())
{
        @Html.ValidationSummary(true, "Login failed. Check your login details.");
    
        <div class="demo">
            <div class="login">
                <div class="login__check"></div>
                <div class="login__form">
                    <div class="login__row">
                        <svg class="login__icon name svg-icon" viewBox="0 0 20 20">
                            <path d="M0,20 a10,8 0 0,1 20,0z M10,0 a4,4 0 0,1 0,8 a4,4 0 0,1 0,-8" />
                        </svg>
                        @Html.TextBoxFor(u => u.Email, new { @class = "login__input name", @placeholder = "User Name" })
                        @Html.ValidationMessageFor(u => u.Email)
                    </div>
                    <div class="login__row">
                        <svg class="login__icon pass svg-icon" viewBox="0 0 20 20">
                            <path d="M0,20 20,20 20,8 0,8z M10,13 10,16z M4,8 a6,8 0 0,1 12,0" />
                        </svg>
                        @Html.PasswordFor(u => u.Password, new { @class = "login__input pass", @placeholder = "Password" })
                        @Html.ValidationMessageFor(u => u.Password)
                    </div>
                    <input type="submit" class="login__submit" value="Sign in" />
                </div>
            </div>
        </div>
}
    </div>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src="/Script/login.js"></script>
</body>
</html>   
